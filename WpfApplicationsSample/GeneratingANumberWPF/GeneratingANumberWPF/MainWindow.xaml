<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    
    
    
    <Grid>
        <StackPanel Background="LemonChiffon">
            <TextBox BorderThickness="10" BorderBrush="Red" Name="TextBoxName" Text="{Binding Name}"/>
            <Button Width="150" FontStyle="Italic" Height="150" FontSize="15" Content="Generate a number !" Name="button1" Click="button1_Click" />
        </StackPanel>
    </Grid>
</Window>
